extends layout

block content
	h2 #{title}
	h3 Please, type in username and password:
	form(name="loginForm", action="/authentication", method="POST")
		p Username:
		input(type="text", name="username") 
		p Password:
		input(type="text", name="password")
		br
		br
		input(type="submit", value="submit")
		
	p #{errorMsg}
	
	a(href="http://localhost:3000/signup") Sign Up
  
